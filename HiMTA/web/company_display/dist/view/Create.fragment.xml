<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
   xmlns:l="sap.ui.layout" >
   <Dialog title="Create new company" id="createDialog">
        <Panel width="100%">
        <l:VerticalLayout>
            <l:content>
            <Label text="Company Name" width="300px" labelFor="NewCompanyInput"/>
            <Input id="NewCompanyNameInput" width="300px" required="true"/>
            <Button text="Create" type="Accept" width="300px" press=".createCompany"/>
            <Button text="Cancel" type="Reject" width="300px" press=".closeDialog"/>
            </l:content>
        </l:VerticalLayout>
        </Panel>
   </Dialog>
</core:FragmentDefinition>